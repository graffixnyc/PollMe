<img id="hand1" src="/public/css/images/hand4.jpg"/>
<div class="form" style="float:right">
      <ul class="tab-group">
        <li class="tab active"><a class="a_log" href="#login">Log In</a></li>
        <li class="tab"><a class="a_log" href="#signup">Sign Up</a></li>
      </ul>
      <div class="tab-content">
            <div id="login" style="float:right;">   
              <form action="/login" method="post">
                <div class="field-wrap">
                <label>
                  Username<span class="req">*</span>
                </label>
                <input class="original-input" type="text" name="username" required autocomplete="off"/>
              </div>
              <div class="field-wrap">
                <label>
                  Password<span class="req">*</span>
                </label>
                <input class="original-input" type="password" name="password" required autocomplete="off"/>
              </div>

              <p class="forgot"><a href="#">Forgot Password?</a></p>
              {{#if redirectPage }}
                <input type="hidden" name="redirectPage" id="redirectPage" value={{ redirectPage }}>
              {{/if}}
                <button type="submit" class="button button-block">Log In</button>
              </form>
               {{#if error }}
                <div class="form-group">
                    <div class="alert alert-danger">
                        {{ error }}
                    </div>
                </div>
                {{/if}}
              </div>

        <div id="signup" style="float:right;">   
          <form action="/singup" method="post">
          <div class="top-row">
            <div class="field-wrap">
              <label>
                First Name<span class="req">*</span>
              </label>
              <input class="original-input" name="firstname" type="text" required autocomplete="on" />
            </div>
        
            <div class="field-wrap">
              <label>
                Last Name<span class="req">*</span>
              </label>
              <input class="original-input" name="lastname" type="text"required autocomplete="on"/>
            </div>
          </div>

              
          <div class="field-wrap">
            <label>
              Username<span class="req">*</span>
            </label>
            <input class="original-input" name="signUpUsername" type="text"required autocomplete="on"/>
          </div>
                      
          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <input class="original-input" name="email" type="email"required autocomplete="on"/>
          </div>

          <div class="field-wrap">
            <label>
              Gender<span class="req">*</span>
            </label>
            <input type="radio" name="male" id="Male"/>
            <label for="Male">Male</label>
            <input type="radio" name="female" id="Female"/>
            <label for="Female">Female</label>
          </div>

          <div class="field-wrap">
            <label>
              Age<span class="req">*</span>
            </label>
            <input class="original-input" name="age" type="text" name="age" />
          </div>

          <div class="top-row">
            <div class="field-wrap">
              <label>
                City<span class="req">*</span>
              </label>
              <input class="original-input" name="city" type="text" required autocomplete="on" />
            </div>
        
            <div class="field-wrap">
              <label>
                State<span class="req">*</span>
              </label>
              <input class="original-input" name="state" type="text"required autocomplete="on"/>
            </div>
          </div>
          
          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
            <input class="original-input" name="signUpPassword" type="password" required autocomplete="on"/>
          </div>
          
            {{#if redirectPage }}
            <input type="hidden" name="redirectPageSignUp" id="redirectPageSignUp" value={{ redirectPage }}>
            {{/if}}
              
          <button type="submit" class="button button-block">Start Polling</button>
          
          </form>

        </div>
      </div>
</div>

