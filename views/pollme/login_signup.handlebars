<div class="form">
      
      <ul class="tab-group">
        
        <li class="tab active"><a href="#login">Log In</a></li>
        <li class="tab"><a href="#signup">Sign Up</a></li>
      </ul>
      
      <div class="tab-content">

            <div id="login">   
              <form action="/login" method="post">
              
                <div class="field-wrap">
                <label>
                  Username<span class="req">*</span>
                </label>
                <input type="text" name="username" required autocomplete="off"/>
              </div>
              
              <div class="field-wrap">
                <label>
                  Password<span class="req">*</span>
                </label>
                <input type="password" name="password" required autocomplete="off"/>
              </div>
              
                {{#if redirectPage }}
                <input type="hidden" name="redirectPage" id="redirectPage" value={{ redirectPage }}>
                {{/if}}
                  
              <p class="forgot"><a href="#">Forgot Password?</a></p>
              
              <button type="submit" class="button button-block">Log In</button>
              
              </form>

            {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            </div>
            {{/if}}
                
                
            </div>

        <div id="signup">   
          <form action="/signup" method="post">
          
          <div class="top-row">
            <div class="field-wrap">
              <label>
                First Name<span class="req">*</span>
              </label>
              <input type="text" required autocomplete="on" />
            </div>
        
            <div class="field-wrap">
              <label>
                Last Name<span class="req">*</span>
              </label>
              <input type="text"required autocomplete="on"/>
            </div>
          </div>

              
          <div class="field-wrap">
            <label>
              Username<span class="req">*</span>
            </label>
            <input type="text"required autocomplete="on"/>
          </div>
                      
          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <input type="email"required autocomplete="on"/>
          </div>

          <div class="field-wrap">
            <label>
              Gender<span class="req">*</span>
            </label>
            <input type="text" name="gender" />
            <!--<input type="radio" name="gender" value="Male"/>-->
          </div>

          <div class="field-wrap">
            <label>
              Age<span class="req">*</span>
            </label>
            <input type="text" name="age" />
          </div>


          <div class="top-row">
            <div class="field-wrap">
              <label>
                City<span class="req">*</span>
              </label>
              <input type="text" required autocomplete="on" />
            </div>
        
            <div class="field-wrap">
              <label>
                State<span class="req">*</span>
              </label>
              <input type="text"required autocomplete="on"/>
            </div>
          </div>
          
          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
            <input type="password"required autocomplete="on"/>
          </div>
          
            {{#if redirectPage }}
            <input type="hidden" name="redirectPageSignUp" id="redirectPageSignUp" value={{ redirectPage }}>
            {{/if}}
              
          <button type="submit" class="button button-block">Start Polling</button>
          
          </form>

        </div>
        
        
        
      </div><!-- tab-content -->
    
</div> <!-- /form -->
