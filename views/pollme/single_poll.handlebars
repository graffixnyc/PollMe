<header>
        <div class="logo">
            <a href="#">PollMe</a>
        </div>
        <div class="menu">
            <nav>
                <ul>
                    <li><a href="/">Home</li>
                    <li><a href="createpoll">Create Polls</li>
                    <li class="dropdown">Hi {{poll.user.username}}
                        <div class="dropdown-content">
                            <a class="submenu" href="/polls/{{user._id}}">My Polls</a>
                            <a class="submenu" href="#">Edit Profile</a>
                            <a class="submenu" href="/logout">Log Out</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
</header>
<div class="single-poll">
    <div id="poll-question">{{poll.poll.question}}</div><br>
    <div id="votes-total">{{poll.vote.totalVotesForPoll}} Votes</div><br>

    <table class=="poll-table">
        <thead>
            <tr class="row-title">
                <th></th>
                <th class="table-head">Choice 1</th>
                <th class="table-head">Choice 2</th>
                <th class="table-head">Choice 3</th>
                <th class="table-head">Choice 4</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="table-head">Total</td>
                <td class="table-body">{{poll.vote.ansChoice1.totalVotes}}</td>
                <td class="table-body">{{poll.vote.ansChoice2.totalVotes}}</td>
                <td class="table-body">{{poll.vote.ansChoice3.totalVotes}}</td>
                <td class="table-body">{{poll.vote.ansChoice4.totalVotes}}</td>
            </tr>
            <tr>
                <td class="table-head">From Male</td>
                <td class="table-body">{{poll.vote.ansChoice1.totalVotesMale}}</td>
                <td class="table-body">{{poll.vote.ansChoice2.totalVotesMale}}</td>
                <td class="table-body">{{poll.vote.ansChoice3.totalVotesMale}}</td>
                <td class="table-body">{{poll.vote.ansChoice4.totalVotesMale}}</td>
            </tr>
            <tr>
                <td class="table-head">From Female</td>
                <td class="table-body">{{poll.vote.ansChoice1.totalVotesFemale}}</td>
                <td class="table-body">{{poll.vote.ansChoice2.totalVotesFemale}}</td>
                <td class="table-body">{{poll.vote.ansChoice3.totalVotesFemale}}</td>
                <td class="table-body">{{poll.vote.ansChoice4.totalVotesFemale}}</td>
            </tr>
        </tbody>
    </table>

    <div id="vote-on-poll">
        <br>
        <h3 class="ask">Which are you voting on?</h3><br>
        <label class="choice">Choice 1</label>
        <input type="radio" id="choice1" name="selector">
        <label class="choice-info" for="choice1">{{poll.poll.ansChoice1}}</label><br>

        <label class="choice">Choice 2</label>
        <input type="radio" id="choice2" name="selector">
        <label class="choice-info" for="choice2">{{poll.poll.ansChoice2}}</label><br>

        <label class="choice">Choice 3</label>
        <input type="radio" id="choice3" name="selector">
        <label class="choice-info" for="choice3">{{poll.poll.ansChoice3}}</label><br>

        <label class="choice">Choice 4</label>
        <input type="radio" id="choice4" name="selector">
        <label class="choice-info" for="choice4">{{poll.poll.ansChoice4}}</label><br>
    </div>
    
    <div id="show-comments">
        <br>
        <h3 class="ask">Comments List</h3><br>
        {{#each poll.poll.comments}}
            <div class="comments-content">
                Poster: {{this.poster}} <br>
                Comment: {{this.comment}}
            </div><br>
        {{/each}}
    </div>

    <form id="post-comment" method="post" action="/commentonpoll">
        <h3 class="ask">What's in your mind?</h3><br>
        <textarea id="comment-post" name="comment"></textarea><br>
        <input type="hidden" name="pollid" value="{{poll.poll._id}}">
        <input type="hidden" name="poster" value="{{poll.user._id}}">
        <input type="submit" id="submit-comment" value="Submit">
    </form>
</div>
<footer>
        <div class="copyright">
            <p>&copy; PollMe Team || Patrick Hill | Yasuo Kobayashi | Haoyang Li | Seito Ryu | Jason Sarwar</p>
        </div>
</footer>