{{!--<img id="home-img" src="/public/css/images/hand4.jpg" />--}}
<div class="home-before">
    <form class="search-box">
        <input id="keyword" type="text" name="keyword" placeholder="Search by keyword...">
        <select id="by-category" name="by-category">
            <option value="null">--Select Category--</option>
            <option value="Technology">Technology</option>
            <option value="Science">Science</option>
            <option value="Education">Education</option>
            <option value="Arts">Arts</option>
            <option value="Philosophy">Philosophy</option>
            <option value="Health">Health</option>
            <option value="Politics">Politics</option>
            <option value="Business&Finance">Finance</option>
            <option value="Sports">Sports</option>
            <option value="Food">Food</option>
            <option value="Travel">Travel</option>
            <option value="Entertainment">Entertainment</option>
        </select>
        <input id="search-button" type="submit" value="Search">
    </form>

    <table class="poll-table">
        <thead>
            <tr>
                <th class="table-head">Question</th>
                <th class="table-head">Category</th>
                <th class="table-head">Date</th>
                <th class="table-head">Votes</th>
            </tr>
        </thead>
        <tbody>
            {{#each poll}}
            <tr>
                <td class="table-body"><a class="track-single" href="/poll/{{_id}}">{{question}}</a></td>
                    <td class="table-body">{{category}}</td>
                    <td class="table-body">{{postedDate}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                    </table>
    </div>
    <footer>
        <div class="copyright">
            <p>&copy; PollMe Team || Patrick Hill | Yasuo Kobayashi | Haoyang Li | Seito Ryu | Jason Sarwar</p>
        </div>
    </footer>